<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_1x">

    <LinearLayout
        android:id="@+id/layoutCallSound"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/line_vertical_0.4"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UseCompoundDrawables,UselessLeaf">

        <ImageView
            android:layout_width="@dimen/dimen_3x"
            android:layout_height="@dimen/dimen_3x"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_call_black" />

        <TextView
            android:layout_gravity="center_horizontal"
            style="@style/TextView.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1x"
            android:text="@string/call_sound"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_vertical_0.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_vertical_0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <LinearLayout
        android:id="@+id/layoutCallVideo"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/line_vertical_0.6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UseCompoundDrawables,UselessLeaf">

        <ImageView
            android:layout_width="@dimen/dimen_3x"
            android:layout_height="@dimen/dimen_3x"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_video" />

        <TextView
            android:layout_gravity="center_horizontal"
            style="@style/TextView.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_1x"
            android:text="@string/call_video"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>